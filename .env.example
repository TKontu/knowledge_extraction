# ===================
# Security (REQUIRED)
# ===================
# Generate a secure random key: openssl rand -hex 32
API_KEY=your-secure-random-key-change-this

# ===================
# Database
# ===================
DB_USER=techfacts
DB_PASSWORD=techfacts
DB_NAME=techfacts

# ===================
# LLM Configuration
# ===================
# Your existing vLLM gateway
OPENAI_BASE_URL=http://192.168.0.247:9003/v1
OPENAI_EMBEDDING_BASE_URL=http://192.168.0.136:9003/v1
OPENAI_API_KEY=ollama

# Models
LLM_MODEL=gemma3-12b-awq
RAG_EMBEDDING_MODEL=bge-large-en

# LLM timeouts and retries
LLM_HTTP_TIMEOUT=900
LLM_MAX_RETRIES=5
LLM_RETRY_BACKOFF_MIN=2
LLM_RETRY_BACKOFF_MAX=60

# ===================
# Scraping Configuration
# ===================
# Rate limiting
SCRAPE_DELAY_MIN=2
SCRAPE_DELAY_MAX=5
SCRAPE_MAX_CONCURRENT_PER_DOMAIN=2
SCRAPE_DAILY_LIMIT_PER_DOMAIN=500

# Retries
SCRAPE_MAX_RETRIES=3
SCRAPE_TIMEOUT=60

# Anti-bot (set to true to enable FlareSolverr)
USE_FLARESOLVERR=false

# ===================
# Extraction Configuration
# ===================
EXTRACTION_DEFAULT_PROFILE=general
EXTRACTION_MAX_CONTENT_LENGTH=50000
EXTRACTION_CHUNK_SIZE=10000
EXTRACTION_CONFIDENCE_THRESHOLD=0.5

# ===================
# Report Configuration
# ===================
REPORT_MAX_FACTS_PER_SECTION=20
REPORT_MAX_FACTS_TOTAL=200
REPORT_DEFAULT_FORMAT=md
REPORT_CACHE_TTL_HOURS=24

# ===================
# Logging & Monitoring
# ===================
LOG_LEVEL=INFO
LOG_FORMAT=json
ENABLE_METRICS=true

# ===================
# Remote Access
# ===================
# For remote deployment, use the server IP
ALLOWED_ORIGINS=http://192.168.0.136:8080,http://localhost:8080
